header() {
    clear
    toilet -f future --filter metal:border " $1 "
    sleep 5
    echo; echo;
}

compare() {
    colordiff -c2 "$1" "$2" | less -r;
}

alias 1='header "Without explicit typing"'
alias 2='header "Adding type annotations"'
alias 3='header "Runtime typing not hit"'
